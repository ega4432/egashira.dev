---
import { getCollection } from "astro:content";

import Layout from '../layouts/BaseLayout.astro';
import { dateSortDesc, formatDate } from '../lib/formatDate';
import { siteMeta } from '../config'

const allNotes = await getCollection('notes', ({ data }) => {
  return data.isPublished === true;
});
allNotes.sort((a, b) => dateSortDesc(a.slug, b.slug)).slice(0, 4); // 最新 5 件のみ
---
<Layout title="Welcome to Astro.">
  <div class="space-y-2 pt-6 pb-8 md:space-y-5">
    <p>{`${siteMeta.description} ${siteMeta.author} の Web サイトです。`}</p>
  </div>
  <div class="divide-y">
    <div class="py-2 md:py-3">
      <h2 class="text-xl font-semibold leading-6 tracking-tight sm:text-2xl sm:leading-7">メモ書き</h2>
    </div>
    <ul>
      {allNotes.map((note) =>
        <li class="py-2">
          <article class="space-y-2 xl:grid xl:grid-cols-4 xl:items-baseline xl:space-y-0">
            <dl>
              <dt class="sr-only">Published On</dt>
              <dd class="text-base font-midium leading-6 text-gray-500 dark:text-gray-400">
                <time>{formatDate(note.data.createdAt)}</time>
              </dd>
            </dl>
            <div class="space-y-3 xl:col-span-3">
              <div>
                <h3 class="text-2xl font-bold leading-8 tracking-tight">
                  <a href={`/notes/${note.slug}`} class="text-gray-900 dark:text-gray-100">{note.data.title}</a>
                </h3>
                <div class="flex flex-wrap">
                  {note.data.tags.map((tag) =>
                    <span class="mr-3 text-sm font-medium text-gray-500">#{tag}</span>
                  )}
                </div>
              </div>
              <div class="prose max-w-none text-gray-500 dark:text-gray-400">{note.data.description}</div>
            </div>
          </article>
        </li>
      )}
    </ul>
  </div>
</Layout>
