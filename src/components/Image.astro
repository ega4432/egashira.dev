---
import { Image } from "@astrojs/image/components";

type Props = {
  alt: string;
  src: string;
  height: number;
  width: number;
  className?: string;
  aspectRatio?: string | number;
  background?: string;
};

const { alt, src, height, width, className } = Astro.props;
---

<Image
  alt={alt}
  src={src}
  height={height}
  width={width}
  class={`${className || ""}`}
/>
