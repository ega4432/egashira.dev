---
import { siteMeta, headerLinks } from "../constants";
---
<header class="flex items-center py-10 justify-between">
  <div>
    <a href="/" aria-label={siteMeta.title}>
      <div class="flex items-center justify-between">
        <div class="h-6 text-2xl font-semibold leading-6">{siteMeta.title}</div>
      </div>
    </a>
  </div>
  <div class="flex items-center text-base leading-5">
    <div class="hidden sm:block">
      {headerLinks.map((link) =>
        <a href={link.href} class="p-1 font-medium text-gray-900 dark:text-gray-100 sm:p-4">{link.title}</a>
      )}
    </div>
  </div>
</header>
