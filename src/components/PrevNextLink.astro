---
import type { CollectionEntry } from "astro:content";
import Icon from "@components/Icon.astro";

type Props = {
  prev?: CollectionEntry<"blog">;
  next?: CollectionEntry<"blog">;
}

const { prev, next } = Astro.props;
---

<div class="grid grid-flow-col grid-cols-2 xl:col-span-10 justify-between py-10 mt-20 gap-4 border-t-2 border-t-gray-200 dark:border-t-gray-600">
  {prev && (
    <a href={`/blog/${prev.id}`} class="grid grid-flow-row items-center content-start gap-2 no-underline hover:bg-gray-200 dark:hover:bg-gray-700 rounded p-4 text-gray-800 hover:!text-gray-800 dark:text-gray-200 dark:hover:!text-gray-200">
      <div class="grid grid-flow-col gap-1 justify-start items-center">
        <Icon name="mdi:chevron-left" />
        <span>前の記事</span>
      </div>
      <p class="justify-self-start my-0 line-clamp-2 font-semibold">{prev.data.title}</p>
    </a>
  )}
  {next && (
    <a href={`/blog/${next.id}`} class={`grid grid-flow-row items-center content-start gap-2 no-underline hover:bg-gray-200 dark:hover:bg-gray-700 rounded p-4 text-gray-800 hover:!text-gray-800 dark:text-gray-200 dark:hover:!text-gray-200 ${!prev && "col-start-2"}`}>
      <div class="grid grid-flow-col gap-1 justify-end items-center">
        <span>次の記事</span>
        <Icon name="mdi:chevron-right" />
      </div>
      <p class="justify-self-end my-0 line-clamp-2 font-semibold text-end">{next.data.title}</p>
    </a>
  )}
</div>
