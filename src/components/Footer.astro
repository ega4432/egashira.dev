---
import { footerLinks } from "../constants";
---
<footer>
  <div  class="flex flex-col items-center py-16">
    <ul class="mb-4 flex w-full flex-row flex-wrap items-center justify-center gap-4 text-sm text-gray-500 dark:text-gray-400 sm:gap-4 md:gap-6 lg:gap-12">
      {footerLinks.map((link) =>
        <a class="text-primary-500 hover:text-primary-600 hover:underline dark:hover:text-primary-400" target="_blank" href={link.href} rel="noreferrer noopener">{link.title}</a>
      )}
    </ul>
    <div class="flex space-x-2 text-sm text-gray-500 dark:text-gray-400">
      <div>&copy 2023 ega4432</div>
    </div>
  </div>
</footer>
