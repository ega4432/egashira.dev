---
import Link from "./Link.astro";
import { footerLinks, siteMeta } from "@constants";
---

<footer>
  <div
    class="mx-auto flex max-w-4xl flex-col-reverse items-center justify-center gap-4 px-4 py-16 text-sm text-gray-600 dark:text-gray-400 sm:gap-4 md:gap-6 lg:flex-row lg:gap-8 2xl:max-w-5xl"
  >
    <div class="whitespace-nowrap text-xs">
      <span>&copy 2023 {siteMeta.author}</span>
    </div>
    <nav>
      <ul
        class="flex flex-row flex-wrap items-center justify-center gap-4 sm:gap-4 md:gap-6 lg:gap-8"
      >
        {
          footerLinks.map((link) => (
            <li>
              <Link className="px-2 xl:px-4" href={link.href}>{link.title}</Link>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</footer>
