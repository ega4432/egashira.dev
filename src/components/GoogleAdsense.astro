---
type Props = {
  adClient: string;
  adSlot: string;
};

const { adClient, adSlot } = Astro.props;
---

<div class="min-w-[330px]">
  <script
    async
    src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8415863265353363"
    crossorigin="anonymous"
  ></script>
  <ins
    class="adsbygoogle"
    style="display:block"
    data-ad-client={adClient}
    data-ad-slot={adSlot}
    data-ad-format="auto"
    data-full-width-responsive="true"
  ></ins>
  <script is:inline>
    (adsbygoogle = window.adsbygoogle || []).push({});
  </script>
</div>
